{
    "compilerOptions": {
        "sourceMap": true,
        "strict": true,
        // "noImplicitAny": true,
        "module": "commonjs",
        "target": "es6",
        "baseUrl": ".",
        "paths": {
            "/@/*": ["src/*"]
        },
        "lib": ["esnext", "dom"],
        "types": ["vite/client"],
        "plugins": [
            // { "name": "@vuedx/typescript-plugin-vue" }
        ]
    },
    "include": [
        "src/**/*.ts", "src/**/*.d.ts", "src/**/*.vue",
        "test/**/*.ts", "test/**/*.d.ts", "test/**/*.vue"
    ]
}